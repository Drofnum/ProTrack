@model  ProTrack.Models.Betas.SubmitBugListingModel
@{
    ViewData["Title"] = "Submit Bug";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Submit Bug</h1>
<h1>@Html.DisplayFor(model => model.ProjectName) Bug report</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BugSummary" class="control-label"></label>
                <input asp-for="BugSummary" class="form-control" />
                <span asp-validation-for="BugSummary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BugDescription" class="control-label"></label>
                <input asp-for="BugDescription" class="form-control" />
                <span asp-validation-for="BugDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildNumber" class="control-label"></label>
                <input asp-for="BuildNumber" class="form-control" />
                <span asp-validation-for="BuildNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

