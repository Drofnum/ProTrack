@model ProTrack.Models.EndUser.EndUserEntryModel
@{
    ViewData["Title"] = "Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Enter new Devices</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" class="form-control"></select>
            </div>
            <div class="row" id="form">
                <div class="col-md-6 col-md-6 form-group">
                    <label asp-for="ManufacturerName" class="control-label">Manufacturer</label>
                    <select asp-for="ManufacturerName" class="form-control" asp-items="@Model.ManufacturerList"></select>
                    <span asp-validation-for="ManufacturerName" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-md-6 form-group">
                    <label asp-for="ProductName" class="control-label">Product</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4 form-group">
                    <input onclick="add(); return false;" value="New Device" class="btn btn-primary" />
                </div>
                <div class="col-md-4 form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    var i = 1;
    function add() {
        var form = document.getElementById("form");
        var selectDiv = document.createElement("div");
        selectDiv.className = "col-md-6 col-md-6 form-group"
        var inputDiv = document.createElement("div");
        inputDiv.className = "col-md-6 col-md-6 form-group"
        var select = document.createElement("select");
        select.className = "form-control";
        select.id = "ManucfacturerName" + i;

        var input = document.createElement("input");
        input.className = "form-control";
        input.type = "text";
        input.id = "ProductName" + i;
        i += 1;
        form.append(selectDiv);
        selectDiv.append(select);
        form.append(inputDiv);
        inputDiv.append(input);
    }
</script>
