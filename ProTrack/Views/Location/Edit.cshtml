@using Microsoft.AspNetCore.Identity
@model ProTrack.Models.Display.LocationListingModel
@inject UserManager<ProTrack.Data.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LocationName" class="control-label"></label>
                <input asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C4AccountName" class="control-label"></label>
                <input asp-for="C4AccountName" class="form-control" />
                <span asp-validation-for="C4AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyDotEmail" class="control-label"></label>
                <input asp-for="MyDotEmail" class="form-control" />
                <span asp-validation-for="MyDotEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <input asp-for="ApplicationUser" name="ApplicationUser" value="@UserManager.GetUserId(User)" type="hidden" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Manage">Back to List</a>
</div>

