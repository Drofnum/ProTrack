@model ProTrack.Models.Display.LocationIndexModel

@{
    ViewData["Title"] = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Locations</h1>
<div class="row">
    <div class="col-md-4 form-group">
        <a asp-controller="Location" asp-action="Create" type="button" value="Create Location" id="addBtn">Add New Location</a>
    </div>
</div>

<table class="table" id="locationTable">
    <thead>
        <tr>
            <th>
                Location Name
            </th>
            <th>
                MyDot Email
            </th>
            <th>
                Control4 Account Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LocationList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MyDotEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.C4AccountName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
